<div class="container">
    <span>
        Creează un sistem de recompense!
    </span>

    <form id="rec-form" method="POST" action="/profile/create_gamification_system">
        <div class="create-btn-container">
            <input type="submit" id="submit_btn" name="submit_btn" value="CREEAZĂ">
        </div>

        <div class="card-form">
            <p>Selectează tipul de recompensă!</p>
            <input type="radio" id="badge1" name="alegere1" value="badge">
            <label for="badge1">Insignă</label> <br>
            <input type="radio" id="levels1" name="alegere1" value="level">
            <label for="levels1">Nivel</label> <br>
            <label for="name" class="nume-rec" id="nume-rec1">Nume recompensă:</label> <br>
            <input type="text" class="name" id="nume-rec1" name="recompensă">
            <br>
        </div>

        <div class="add" id="add-btn">+</div>
    </form>

</div>