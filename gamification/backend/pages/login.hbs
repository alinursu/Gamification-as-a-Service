<div id="body-div">
    {{#if errorMessage}}
        <h2 id="error-message-login">{{errorMessage}}</h2>
    {{/if}}
    
    <form method="post" action="/login">
        <label for="email">Adresa de email:</label>
        {{#if previousEmailValue}}
            <input type="text" id="email" name="email" value="{{previousEmailValue}}"> 
        {{else}}
            <input type="text" id="email" name="email"> 
        {{/if}}
        <br>
        <label for="password">Parola:</label>
        <input type="password" id="password" name="password">
        <label for="rememberChckBox">Păstrează-mă autentificat timp de 24 de ore</label>
        <input type="checkbox" id="rememberChckBox" name="rememberChckBox">
        <br>

        <div>
            <input type="submit" value="Autentifică-te">
        </div>
    </form>
</div>