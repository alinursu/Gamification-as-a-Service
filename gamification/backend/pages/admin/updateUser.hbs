<HTML>
<head>
    <title>Admin Pannel</title>
    <link rel="stylesheet" href="../../styles/admin-update.css">
</head>
<body>
<div class="container">
    <div class="top-nav">
        <a href=""> ADMIN PANEL</a>
    </div>
    <div class="box">
        <div class="side-nav">
            <a href="/admin/users" class="user"> View users </a>
            <a href="/admin/users/add" class="add-user"> Add user </a>
        </div>
        <div class="content">
            <div class="form">
                <form method="post" action="/admin/users/update">
                    <input type="hidden" name="id" value="{{this.user.id}}">
                    <label for="fname">First name:</label><br>
                    <input type="text" id="fname" name="fname" value="{{this.user.firstname}}"><br>
                    <label for="lname">Last name:</label><br>
                    <input type="text" id="lname" name="lname" value="{{this.user.lastname}}"><br>
                    <label for="email">Email:</label><br>
                    <input type="text" id="email" name="email" value="{{this.user.email}}"><br>
                    <label for="url">URL:</label><br>
                    <input type="text" id="url" name="url" value="{{this.user.url}}"><br>
                    <button class="add-btn">Update</button>
                </form>

            </div>
        </div>
    </div>
</div>

</body>

</HTML>